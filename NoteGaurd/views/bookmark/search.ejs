<div class="container-fluid container-fluid-custom pb-5 mb-5">
  <div class="row">
    <div class="col">
      <h1 class="mt-4 mb-4" style="font-size: 14px; color: #555; text-align: center;">
        Click the title of each bookmark for additional details. You can search by Title, Body, or Tags.
      </h1>
    </div>
  </div>
  <div class="row">
    <% if (searchResults !== '') { %>
      <% searchResults.forEach(function (bookmark, index) { %>
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card h-100">
            <div class="card-body">
              <a href="/bookmark/item/<%= bookmark._id %>" class="text-decoration-none text-dark">
                <h4 class="card-title mb-3" style="font-size: 18px; font-weight: bold;">
                  <%= bookmark.title %>
                </h4>
              </a>
            </div>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <div class="col">
        <div class="card">
          <div class="card-body">
            <p class="card-text" style="font-size: 16px; color: #555; text-align: center;">
              No items found.
            </p>
          </div>
        </div>
      </div>
    <% } %>
  </div>
</div>
