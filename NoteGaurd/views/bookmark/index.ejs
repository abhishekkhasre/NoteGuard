<div class="container-fluid container-fluid-custom pb-5 mb-5">
  <div class="row mb-4">
    <div class="col">
      <h1>Hey, <%= userName %>
      </h1>
    </div>
    <div class="col text-end">
      <a href="/bookmark/add" class="btn btn-primary">+ New Bookmark</a>
    </div>
  </div>

  <div class="row">
    <% if (bookmarks.length> 0) { for(var i=0; i < bookmarks.length; i++) { %>
       <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
  <div class="card border-primary h-100 d-flex flex-column justify-content-center align-items-center" style="padding: 20px;">
    <div class="card-body text-center">
      <a href="/bookmark/item/<%= bookmarks[i]._id %>" style="text-decoration: none;">
        <h5 class="card-title mb-3" style="color: #333;"><%= bookmarks[i].title %></h5>
      </a>

      <p class="card-text">
        <a href="<%= bookmarks[i].url %>" target="_blank">
          <button type="button" class="btn btn-primary">Visit Website</button>
        </a>
      </p>
      <p class="card-text">
        <%= bookmarks[i].tags %>
      </p>
      <p class="card-text" style="color: #666;"><%= bookmarks[i].body %></p>
    </div>
  </div>
</div>
        <% }} else { %>
          <div class="row">
            <div class="col-3">
              <img src="/img/human-3.svg" alt="Human pointing hand toward a create button">
            </div>
            <div class="col mt-md-4">
              <h2>Okay...</h2>
              <h4>Let's start with your first bookmark!<br /><br />
                <a href="/bookmark/add">Create one!</a>
              </h4>
            </div>
          </div>
          <% } %>

            <% if(bookmarks.length> 0) { %>
              <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-center mt-5">
                  <% if(current == 1) { %>
                    <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
                  <% } else { %>
                    <li class="page-item"><a class="page-link" href="/bookmark">First</a></li>
                  <% }  %>
          
                  <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
                  <% if (i !== 1 ) { %>
                    <li class="page-item disabled"><a class="page-link" href="#">...</a></li>
                  <% } %>
          
                  <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                    <% if(i == current ) { %>
                      <li class="page-item active" aria-current="page"><a class="page-link" href="#"><%= i %></a></li>
                    <% } else { %>
                      <li class="page-item"><a class="page-link" href="/bookmark/?page=<%= i %>"><%= i %></a></li>
                    <% } %>
          
                    <% if(i == Number(current) + 4 && i < pages) { %>
                      <li class="page-item disabled"><a class="page-link" href="#">...</a></li>
                    <% } %>
                  <% } %>
          
                  <% if (current == pages) { %>
                    <li class="page-item disabled"><a class="page-link">Last</a></li>
                  <% } else { %>
                    <li class="page-item"><a href="/bookmark/?page=<%= pages %>" class="page-link">Last</a></li>
                  <% } %>
                </ul>
              </nav>
              <% } %>
  </div>