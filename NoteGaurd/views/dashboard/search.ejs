
<div class="container-fluid container-fluid-custom pb-5 mb-5">
  <div class="row">
    <div class="col">
      <h1 class="mt-4 mb-4" style="font-size: 14px; color: #555; text-align: center;">
        Click the heading of each note for additional details. You can search by Body and Title.
      </h1>
    </div>
  </div>
  <div class="row">
    <% if (searchResults !== '') { %>
      <% searchResults.forEach(function (note, index) { %>
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card h-100">
            <div class="card-body d-flex flex-column justify-content-center">
              <a href="/dashboard/item/<%= note._id %>" style="text-decoration: none; color: #007bff;">
                <h4 class="card-title" style="font-size: 18px; font-weight: bold; margin: 0;">
                  <%= note.title %>
                </h4>
              </a>
            </div>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <div class="col">
        <div class="card">
          <div class="card-body d-flex flex-column justify-content-center">
            <p class="card-text" style="font-size: 16px; color: #555; text-align: center;">
              No items found.
            </p>
          </div>
        </div>
      </div>
    <% } %>
  </div>
</div>
